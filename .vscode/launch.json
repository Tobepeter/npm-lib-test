  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "使用 Nodemon 启动",
      "runtimeExecutable": "nodemon",
      "program": "${file}",
      "restart": true, // nodemon会重启进程，需要restart保持会话
      "console": "internalConsole",
      "internalConsoleOptions": "openOnFirstSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}